<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>АБК</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1" >
    <!-- Place favicon.ico and apple-touch-icon.png in the root directory -->

    <link rel="stylesheet" href="index.css">
  </head>
  <body>
    {% block content %}{% endblock %}
    <div class="modal modal--dark" id="modal_call">
      <div class="modal__dialog modal__dialog--form">
        <div class="modal__close"><a href="#"></a></div>
        <form class="modal__form abc-form">
          <header class="abc-form__header"><h2>Оставьте контакты и получите скидку</h2></header>
          <div class="abc-form__field">
            <input type="text" name="" placeholder="Ваше имя">
          </div>
          <div class="abc-form__field">
            <input type="text" name="" placeholder="Ваше телефон">
          </div>
          <div class="abc-form__field">
            <textarea placeholder="Ваше сообщение"></textarea>
          </div>
          <div class="abc-form__field">
            <button type="submit" class="btn btn--green btn--submit">Отправить</button>
          </div>
        </form>
      </div>
    </div>
    <!-- inject:js -->
    <!-- endinject -->
  </body>
</html>
