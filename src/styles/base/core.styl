
global-reset()

html,
input[type="text"],
textarea
  font normal 500 1rem "MuseoSans", sans-serif;
  border: 1px solid $dark-gray
  
  &:focus
    outline: 0
  
textarea
  resize: none

*, *:after, *:before
  box-sizing: border-box

a
  color: $black
  text-decoration: none
  
body
  +below(980px)
    overflow-x: hidden
    
h1, h2, h3, h4, h5, h6
  font normal 500 1rem "Museo", sans-serif;