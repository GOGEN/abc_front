
.navbar
  padding: 15px 0
  height: 65px

  &__list
    clearfix()

  &__item
    position: relative
    float: left
    padding: 10px 25px
    list-style-type: none

    &--active,
    &:hover
      &::after
        display: block
        content: ""
        position: absolute
        bottom: 0
        right: 25px
        left: 25px
        height: 2px
        background-color: $green

    &>a
      display: block
      font-size: 18px
      font-weight: 500
      cursor: pointer

    &--cart
      float: right
      background: img-url("icons/cart.svg") no-repeat left center

      +below(1260px)
        display: none

      &>a
        font-size: 16px
        font-weight: 300
        color: $dark-gray

    &__notify
      position: absolute
      top: 0
      left: -5px
      width: 17px
      height: @width
      border-radius(@width)
      background-color: $green
      color: $white
      font-size: 11px
      line-height: @height
      text-align: center

  &--page &__item
    padding: 10px 10px

    &--active,
    &:hover
      &::after
        right: 10px
        left: 10px

    &>a
      font-size: 18px
      font-weight: 500
