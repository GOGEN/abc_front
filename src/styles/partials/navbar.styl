
.navbar
  padding-left: 60px
  padding-right: 35px
  
  &__list
    margin-left: 95px
    clearfix()

  &__item
    position: relative
    float: left
    padding: 0 25px
    height: 65px
    line-height: @height
    list-style-type: none

    &>a:hover,
    &>a:active
      &::after
        display: block
        content: ""
        position: absolute
        bottom: 20px
        right: 25px
        left: 25px
        height: 2px
        background-color: $green

    &>a
      display: block
      font-size: 18px
      font-weight: 500
      cursor: pointer

    &--cart
      float: right
      background: img-url("icons/cart.svg") no-repeat left center

      +below(1260px)
        display: none

      &>a
        font-size: 16px
        font-weight: 300
        color: $dark-gray

    &__notify
      position: absolute
      top: 15px
      left: -5px
      width: 17px
      height: @width
      border-radius(@width)
      background-color: $green
      color: $white
      font-size: 11px
      line-height: @height
      text-align: center

  &--page &__item
    padding: 10px 10px

    &--active,
    &:hover
      &::after
        right: 10px
        left: 10px

    &>a
      font-size: 18px
      font-weight: 500
    
  +below(1260px)
    
    &--header  
    
    &--header &__item
      flaot: none
      width: 100%
      height: auto
      text-align: center
      
      &>a:hover,
      &>a:active
        color: $green
        
        &::after
          display: none
        
