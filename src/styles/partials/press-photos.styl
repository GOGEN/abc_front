
.press-photos
  margin: 0 -40px
  padding-top: 20px
  padding-bottom: 90px
  clearfix()
  
  &__item
    col(353/1080, 3, cycle: 3, offset: 0, gutter: .8%)
    position: relative
    margin-bottom: 10px
    height: 215px
    border: 1px solid $gray-two
    
    img
      align()
      max-width: 100%

  +below(980px)
    margin: 0
    
  +below(720px)
  
    &__item
      col(350/720, 2, uncycle: 3, cycle: 2, offset: 0, gutter: .8%)
      
  +below(400px)
    
    &__item
      span(1/1)