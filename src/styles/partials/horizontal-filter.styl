
.horizontal-filter
  background: $white

  &__list
    padding: 0 10px
    clearfix()

  &__item
    float: left
    position: relative
    padding: 0 10px

    label
      display: block
      position: relative
      padding-left: 35px
      width: 100%
      height: 55px
      line-height: 58px
      font-size: 12px
      cursor: pointer

      &::after
        display: block
        content: ""
        position: absolute
        left: 5px
        top: 50%
        width: 20px
        height: @width
        border-radius(3px)
        border: $gray-two
        transform: translateY(-50%)

    input[type="checkbox"]
      position: absolute
      opacity: 0
      
      &:disabled + label
        color: $gray-two

      &:checked + label::after
        background: img-url("icons/check-icon.svg") no-repeat center center
        
  +below(1080px)
    
    &__item
      padding: 0 5px
      
      label
        padding-left: 30px
        
        &::after
          left: 0

  +below(980px)
    padding: 0
    background: $white

    &__item
      display: block
      float: none
      padding: 0
      height: 40px
      line-height: @height
      border: 0
      
      &:first-child
        border: 0
      
      label
        padding-right: 0
        padding-left: 40px
        height: 40px
        line-height: 40px
        font-size: 16px
        
        &::after
          left: 10px
          
  +below(400px)
  
    &__item
      
      label
        padding-left: 30px
        
        &::after
          left: 0