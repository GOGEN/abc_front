
.popular
  clearfix()

  &__header
    position: relative
    margin-top: 40px
    height: 70px
    padding: 10px 20px

    &>h2
      height: 100%
      font-size: 34px
      text-align: center

    &__catalog
      position: absolute
      right: 20px
      top: 50%
      transform: translateY(-50%)

  &__item
    span(1/2)
    position: relative
    margin-top: 25px
    padding: 140px 30px 0 30px
    height: 300px
    background: linear-gradient(bottom, $white, $white-0)

    &__cover
      position: absolute
      top: 0
      left: 20px
      bottom: 0
      right: 20px
      background-repeat: no-repeat
      background-size: cover
      z-index: -1

    &__info
      position: relative
      float: left
      margin-left: 20px
      width: 330px
      height: 100%

    &__img
      float: left
      position: relative
      width: 160px
      height: @width
      background: linear-gradient(bottom, $gray, $white)
      overflow: hidden

      img
        align()

    &__header>h3
      font-size: 20px
      font-weight: 700

    &__description
      margin-top: 15px

      &>tbody>tr
        height: 20px

      &>tbody>tr>td:first-child
        padding-right: 25px

      &>tbody>tr>td:last-child
        font-size: 18px
        font-weight: 700

    &__add-cart
      position: absolute
      bottom: 0
      left: 0
