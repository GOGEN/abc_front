
.about-block
  position: relative
  margin-top: 85px
  height: 400px
  background: $dark-50

  &__cover
    position: absolute
    width: 100%
    height: 100%
    overflow: hidden
    z-index: -1

    img
      width: 100%
      height: 100%

  &__header
    padding-top: 100px
    height: 150px
    text-align: center

    &__logo,
    &__delimiter,
    &__title
      display: inline-block
      height: 100%

    &__delimiter,
    &__title
      margin-left: 20px

    &__logo,
    &__title
      padding: 7.5px 0

    &__delimiter
      width: 2px
      background: $white

    &__title
      vertical-align: top
      line-height: 50px
      font-size: 28px
      color: $white

  &__info
    margin-top: 50px
    text-align: center
    color: $white
    font-size: 24px
    line-height: 2rem
