
.about-block
  position: relative
  margin-top: 85px
  padding: 0 35px
  height: 495px
  background: img-url("media/dreamstime.jpg") no-repeat center center
  background-size: cover

  &__cover
    position: absolute
    left: 0
    right: 0
    width: 100%
    height: 100%
    background-color: $dark-50
    
  &__content
    position: relative
    z-index: 1
    
  &__header
    padding-top: 100px
    height: 150px
    text-align: center

    &__logo,
    &__delimiter,
    &__title
      display: inline-block
      height: 100%

    &__delimiter,
    &__title
      margin-left: 20px

    &__logo,
    &__title
      padding: 7.5px 0

    &__delimiter
      width: 2px
      background: $white

    &__title
      vertical-align: top
      line-height: 50px
      font-size: 28px
      color: $white

  &__info
    margin-top: 50px
    text-align: center
    color: $white
    font-size: 24px
    line-height: 2rem
    
  +below(1260px)
    margin-right: -30px
    margin-left: -30px

  +below(450px)
    margin-right: -15px
    margin-left: -15px
    padding: 0 15px
    
    &__header
      
      &__title
        font-size: 26px
      
      &__delimiter,
      &__title
        margin-left: 10px
        
    &__info
      font-size: 22px

