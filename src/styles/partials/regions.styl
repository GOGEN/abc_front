
.regions
  padding: 25px 0
  
  &__list
    clearfix()
    
  &__item
    col(480/1000, 2, offset: 0)
    margin-bottom: 40px
    padding: 40px 20px 20px 20px
    background: $gray
    
    &__header
      position: relative
      
      h2
        margin-right: 45px
        font-weight: 700
        font-size: 28px
        
      &__goto
        position: absolute
        top: 0
        right: 0
        
        a
          display: block
          width: 38px
          height: 28px
          background: img-url("icons/arrow-right.svg") no-repeat center center        
          
    &__cover
      position: relative
      margin-top: 75px  
      height: 230px
      overflow: hidden
      
      img
        align()
        min-width: 100%
        min-height: 100%
        
      &__compas
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background: img-url("icons/compas.svg") no-repeat right -65px bottom -55px
        
        // &:first-type-
        //   background-color: $green-80
          
        // &--second
        //   background-color: $green-two-80
          
        // &--other
        //   background-color: $blue-80
    &:first-child &__cover__compas
      background-color: $green-80
      
    &:nth-child(2) &__cover__compas
      background-color: $green-two-80
      
    &:nth-child(n+3) &__cover__compas
      background-color: $blue-80
      
  +below(680px)
  
    &__item
      span(1/1)