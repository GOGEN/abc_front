
.destinations
  clearfix()
  margin-top: 5px
  background: $gray

  &__item
    span(1/4)
    height: 285px
    padding-top: 140px
    background-repeat: no-repeat
    background-position: center bottom 170px

    &--bricks
      background-image: img-url("icons/bricks.svg")

    &--factories
      background-image: img-url("icons/factory.svg")

    &--clients
      background-image: img-url("icons/icon-clients.svg")
      background-size: 80px auto

    &--houses
      background-image: img-url("icons/house.svg")

    &__title,
    &__sub
      text-align: center

    &__title
      font-size: 34px
      font-weight: 700

    &__sub
      font-size: 16px

    &__title + &__sub
      margin-top: 5px
  
  +below(980px)
  
    &__item
      span(1/2)

  +below(450px)
    
    &__item
      span(1/1)
      height: 225px
      background-position: center bottom 110px