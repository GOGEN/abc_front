
.header
  position: fixed
  top: 0
  width: 100%
  height: 131px
  z-index: 1

  &__logo
    position: absolute
    top: 0
    left: 0
    padding-top: 30px
    padding-left: 60px
    height: 100%
    background-color: $white

    +below(1260px)
      position: static
      padding-top: 10px
      padding-left: 0
      width: 100%
      text-align: center

    &::after
      display: block
      content: ""
      position absolute
      top: 0
      left: 100%
      height: 100%
      width: 100px
      background: linear-gradient(left, $white, $white-0)
      
  &__menu
    margin-left: 230px
    background-color: $white-80

  +below(1260px)
    height: 100px
    
    &__menu
      margin-left: 0
      background-color: $white
