
.header
  position: fixed
  top: 0
  width: 100%
  height: 131px
  z-index: 10
  transition: height .2s linear

  &__logo
    position: absolute
    top: 0
    left: 0
    padding: 30px 0
    padding-left: 60px
    width: 230px
    height: 100%
    background-color: $white
    transition: all .2s linear
    
    &>a
      display: block
      width: 100%
      height: 100%
      background: img-url('icons/logo.svg') no-repeat center center
      background-size: contain

    &::after
      display: block
      content: ""
      position absolute
      top: 0
      left: 100%
      height: 100%
      width: 100px
      background: linear-gradient(left, $white, $white-0)
      
  &__cart
    display: none
      
  &__menu
    margin-left: 230px
    background-color: $white-80
    
    &--solid
      background-color: $white
      
  &--sticky
    height: 65px
    background: $white
    
  &--sticky &__logo
    padding-top: 10px
    padding-right: 65px
    padding-bottom: 10px
    width: 230px
    height: 100%
    
  & .topbar
    height: 100%
    max-height: 65px
    overflow-y: hidden
    opacity: 1
    transition: all .2s linear
    
  &--sticky &__menu
    
    & .topbar
      padding-top: 0
      padding-bottom: 0
      max-height: 0
      opacity: 0
      
    
  &__checkbox
    display: none
    
  +below(1260px)
    
    &__menu
      margin-left: 200px

  +below(980px)
    position: static
    height: 100%
    z-index: 0
    
    &__cart
      display: block
      position: absolute
      top: 35px
      right: 15px
      z-index: 10
    
    &__menu
      position: absolute
      margin-left: 0
      width: 100%
      overflow-x: hidden
      background-color: $white
      transition: width .2s ease-in-out
    
    &__logo
      position: static
      padding-top: 10px
      padding-left: 0
      width: 100%
      height: 100px
      text-align: center
      
      &::after
        display: none
      
    &__checkbox
      display: block
      position: absolute
      top: 0
      z-index: 1
      
    &__checkbox:checked + &__menu
      width: 100%