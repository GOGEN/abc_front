
.catalog-page
  margin-top: 65px
  padding-top: 115px
  padding-bottom: 120px
  background: $gray
  
  & input[type="radio"].catalog-page__filter-dd
  & input[type="radio"].catalog-page__filter-dd + label
    position: absolute
    opacity: 0
    z-index: -1

  &__sidebar
    col(290/1140, offset: 0, gutter: 0)
    padding-top: 65px

  &__topbar
    col(850/1140, offset: 0, gutter: 0)
    float: right

  &__showcase
    col(850/1140, offset: 0, gutter: 0)
    float: right
    margin-top: 10px

    &__item
      span(1/2)
      margin-bottom: 10px

      &:nth-child(2n)
        padding-left: 5px

      &:nth-child(2n+1)
        padding-right: 5px


  +below(980px)
    padding-top: 25px
  
    & input[type="radio"].catalog-page__filter-dd
      
      & + label
        position: relative
        opacity: 1
        z-index: 0
        col(470/960, offset: 0, gutter: 1%)
        padding: 0 15px
        height: 50px
        line-height: @height
        background: $white img-url('icons/arrow-bottom.png') no-repeat right 5px center
        box-shadow: 0 4px 6px 0 $dark-gray
        
      &--right + label
        float: right
        margin-right: 0

      &:checked + label
        background-image: img-url('icons/arrow-top.png')
        
        &::after
          display: block
          content: ""
          position: absolute
          top: 100%
          left: 0
          width: 100%
          height: 10px
          background: $white
          box-shadow: 0 4px 4px 0px $dark-gray
        
    & input[type="radio"].catalog-page__filter-dd:checked + label + &__sidebar,
    & input[type="radio"].catalog-page__filter-dd:checked + label + &__topbar
      display: block
    
    &__sidebar,
    &__topbar
      display: none
      float: none
      position: absolute
      top: 58px
      right: 0
      left: 0
      padding: 0 10px
      width: auto
      z-index: 1
      
    &__showcase
      span(1/1)
      
  +below(680px)
  
    &__showcase__item
      span(1/1)
    
      