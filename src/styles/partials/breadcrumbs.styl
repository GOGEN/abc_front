
.breadcrumbs
  padding-top: 15px

  &__item
    display: inline-block
    
    a
      color: $white
    
    &--active a
      color: $gray-two

    &--arrow
      width: 27px
      height: 10px
      background: img-url("icons/arrow-right-white.svg") no-repeat center center
      background-size: contain

  &--black &__item 

    a
      color: $black    

    &--active a
      color: $gray-two



  &--black &__item--arrow
    background: img-url("icons/arrow-right.svg") no-repeat center center
    background-size: contain
