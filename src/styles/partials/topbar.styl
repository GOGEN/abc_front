
.topbar
  padding: 15px 60px
  height: 100%
  max-height: 65px
  background-color: $white
  overflow-y: hidden
  opacity: 1
  transition: all .2s linear
  clearfix()

  &__catalog
    float: left

  &__catalog
    margin-left: 12%

  &__call
    float: right

    a:first-child
      padding-right: 25px

  &__search
    position: relative
    float: right
    margin-right: 25px
    height: 36px

    &__form
      position: absolute
      right: 0
      width: 36px
      height: 100%

      button
        display: block
        position: absolute
        border: 0
        outline: 0
        cursor: pointer
        transition: opacity .3s linear
        opacity: 0
        z-index: -1

      button[type="submit"]
        top: 5px
        right: 40px
        width: 75px
        height: 25px
        border-radius(2px)
        background: $white

      button[type="reset"]
        top: 7.5px
        right: 10px
        width: 20px
        height: @width
        border-radius(@width)
        background: $gray-eight img-url("icons/close.svg") no-repeat center center
        background-size: 10px

        &:hover
          background-color: $gray-two

      input
        position: absolute
        right: 0
        width: 36px
        height: 36px
        border: 0
        background: $gray-four img-url("icons/search.svg") no-repeat center center
        transition: width .2s ease-out
        font-size: 0

        &:hover
          background-color: $gray
          cursor: pointer

      &--open
        width: 345px

        input
          padding-right: 120px
          padding-left: 10px
          width: 320px
          outline: 0
          border: 0
          background: $gray
          font-size: 16px
          cursor: text

          &:hover
            cursor: text

        button
          opacity: 1
          z-index: 0

  &__cart
    display: none

  +below(1260px)
    padding-left: 35px

    &__catalog
      margin-left: 5%

  +below(980px)
    display: flex
    flex-wrap: wrap
    padding: 0
    height: auto
    max-height: none
    background-color: $white
    text-align: center

    &__cart
      display: none

    &__call
      margin-right: 0
      padding: 8px 0

    &__catalog,
    &__search
      float: none
      margin-left: 0
      height: 50px
      line-height: 50px

    &__catalog
      order: 1
      border: 1px solid $gray

      a.topbar-link-catalog
        display: inline-block
        background-color: $white
        background-image: img-url('icons/catalog.svg')
        color: $black

        &:hover
          background-color: $white

    &__search,
    &__call,
    &__catalog
      width: 100%

    &__call
      border: 1px solid $gray
      border-bottom: 0

      span
        padding: 0 20px

    &__catalog__link
      display: inline-block
      height: 48px
      line-height: @height
      font-size: 18px
      background-color: $white

      &:active,
      &:hover
        background-color: $white

    &__search
      margin: 0
      order: 2

      &__form
        width: 100%

        input
          position: relative
          width: 100%
          height: 50px
          background-position: right 20px center
          font-size: 16px

          &:focus,
          &:valid
            width: 100%

        button[type="submit"],
        button[type="reset"]
          top: 50%
          transform: translateY(-50%)
          transition: none
