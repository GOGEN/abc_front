
.topbar
  padding: 15px 60px
  height: 65px
  background-color: $white
  clearfix()

  &__catalog
    float: left

  &__catalog
    margin-left: 12%
    
    &__link
      display: block
      height: 36px
      line-height: @height
      border-radius(3px)
      padding-left: 50px
      padding-right: 25px
      background: $gray-four img-url("icons/catalog.svg") no-repeat left 25px center
      font-size: 18px
      background-size: 12px 12px
      
      &:hover
        background-color: $gray

  &__call
    float: right
    margin-right: 90px
    color: $green
    
    & span
      padding-left: 25px

  &__search
    position: relative
    float: right
    height: 36px
    
    button
      display: block
      position: absolute
      border: 0
      outline: 0
      cursor: pointer
      transition: opacity .3 linear
      opacity: 0
      z-index: -1
      
    button[type="submit"]
      top: 5px
      right: 40px
      width: 75px
      height: 25px
      border-radius(2px)
      background: $white
    
    button[type="reset"]
      top: 7.5px
      right: 10px
      width: 20px
      height: @width
      border-radius(@width)
      background: $dark-gray img-url("icons/close.svg") no-repeat center center

    input
      position: absolute
      right: 0
      padding: 0 10px
      width: 36px
      height: 36px
      border: 0
      background: $gray-four img-url("icons/search.svg") no-repeat center center
      transition: width .2s ease-out
      font-size: 0
      
      &:hover
        background-color: $gray
        cursor: pointer

      &:valid,
      &:focus
        width: 445px
        outline: 0
        border: 0
        background: $gray
        font-size: 16px
        cursor: text

        &~button
          opacity: 1
          z-index: 0

  &__cart
    display: none
    
  +below(1260px)
    padding-left: 35px
    
    &__catalog
      margin-left: 5%
      
    &__call
      margin-left: 10%

  +below(980px)
    display: flex
    flex-wrap: wrap
    padding: 0
    height: auto
    background-color: $white
    text-align: center
    
    &__catalog,
    &__search,
    &__cart,
    &__call
      float: none
      margin-left: 0
      height: 50px
      line-height: 50px

    &__catalog,
    &__cart
      order: 1
      width: 50%
      border: 1px solid $gray
    
    &__search,
    &__call
      width: 100%
      
    &__call 
      border: 1px solid $gray
      border-bottom: 0
      
      span
        padding-left: 20px
        
    &__catalog__link
      display: block
      height: 48px
      line-height: @height
      font-size: 18px
      
    &__search
      order: 2

      input
        width: 100%

        &:focus
          background-image: img-url("icons/search.svg")
          width: 100%

    &__cart
      display: block
      position: relative
      text-align: center
      

      &>a
        display: block
        font-size: 16px
        font-weight: 300
        color: $dark-gray
        
      &__icon
        position: relative
        top: 4px
        display: inline-block
        width: 20px
        height: 20px
        background: img-url("icons/cart.svg") no-repeat center center
        
      &__notify
        position: absolute
        top: -5px
        left: -5px
        width: 17px
        height: @width
        border-radius(@width)
        background-color: $green
        color: $white
        font-size: 11px
        line-height: @height
        text-align: center
