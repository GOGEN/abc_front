
.press-gallery
  padding-top: 10px
  padding-bottom: 110px
  clearfix()
  
  &__item
    col(355/1080, 3, offset: 0, cycle: 3, gutter: .5%)
    position: relative
    margin-bottom: 10px
    height: 215px
    overflow: hidden
    
    img
      align()
      min-width: 100%
      min-height: 100%
      
    &__panel
      display: table
      position: absolute
      bottom: 0
      padding: 5px 45px 5px 10px
      width: 100%
      height: 50px
      overflow: hidden
      background: $white-70
      font-size: 14px
      
      span
        display: table-cell
        vertical-align: middle

      &__goto
        position: absolute
        right: 10px
        top: 50%
        transform: translateY(-50%)
        
  +below(980px)
    center(720px)
    
    &__item
      col(355/720px, 2, offset: 0, uncycle: 3, cycle: 2, gutter: .5%)
      
  +below(680px)
    center(355px)
    
    &__item
      span(1/1)
