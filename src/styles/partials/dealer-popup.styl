.dealer-popup
  padding: 35px
  height: 100%
  background: $gray
  clearfix()

  &__about,
  &__contacts
    padding: 75px 50px
    line-height: 1.4rem

  &__about
    padding-right: 35px
  &__contacts
    padding-left: 35px

  &__contacts
    &__address
      font-size: 20px
      font-weight: 700
      line-height: 1.4rem

  h2
    font-size: 24px
    text-align: center

  table
    margin-top: 10p
  td
    padding-top: 15px
    padding-right: 10px
    vertical-align: top

  &__about,
  &__contacts
    span(1/2)

  +below(980px)
    &__about,
    &__contacts
      padding: 50px 15px

  +below(680px)
    padding-right: 15px
    padding-left: 15px

    &__about,
    &__contacts
      float: none
      width: 100%
      padding: 15px 0
