
.contacts

  &__main-phones
    margin-top: 25px
    height: 230px
    text-align: center

    h3,
    p
      font-size: 28px

    p
      margin-top: 20px
      font-weight: 700

    h4
      font-size: 12px

  &__tabs
    
    &__active
      display: none

    &__menu
      display: table
      text-align: center
      font-size: 18px
      border-collapse: separate
      border-spacing: 2px

      &__item
        display: table-cell
        padding: 0 30px
        width: 198px
        height: 60px
        border: 2px $gray solid
        line-height: 1.5rem
        vertical-align: middle
        cursor: pointer

        &--active
          position: relative
          background: $gray

          &::after
            display: block
            content: ""
            position: absolute
            top: 100%
            left: -2px
            right: -2px
            width: 200px
            height: 4px
            background: $gray

    &__content
      display: none
      margin: 0 -70px
      padding: 90px 140px
      min-height: 380px
      background: $gray img-url("icons/compas-green.svg") no-repeat right -60px bottom -60px
      clearfix()
      
      &--active
        display: block

      &__col
        float: left
        width: 50%

        h2
          font-weight: 700
          font-size: 28px

        table
          margin-top: 10px

        td
          padding-top: 15px
          padding-right: 10px
          vertical-align: top
          
      &__scheme
        margin-top: 30px
          
  +below(880px)
    &__tabs
      position: relative
      
      &__active
        display: block
        position: absolute
        top: 20px
        right: 0
        left: 0
        margin: 0 auto
        padding-right: 30px
        padding-left: 10px
        max-width: 370px
        background: $white
        
        &__item
          height: 50px
          line-height: @height
        
        &__arrow
          position: absolute
          top: 0
          right: 0
          width: 30px
          height: 50px
          background: img-url("icons/arrow-top.png") no-repeat center center
          transform: rotate(180deg)
          
          &--top
            transform: rotate(0)
          
      
      &__menu
        display: block
        position: absolute
        top: 72px
        right: 0
        left: 0
        margin: 0 auto
        max-width: 370px
        max-height: 0px
        transition: max-height .1s ease-in
        overflow-y: hidden
        
        &__item
          display: block
          padding: 0 10px
          width: 100%
          height: 40px
          line-height: @height
          border: 0
          background: $white
          font-size: 16px
          text-align: left
          
          &--active
            color: $gray-four
            
            &::after
              display: none
        
        &--show
          max-height: 200px
                
      &__content
        margin: 0 -15px
        padding: 120px 20px 40px 20px
        background-image: none
        
        &__col
          float: none
          margin: 0 auto
          margin-bottom: 30px
          max-width: 370px
          
  +below(650px)
    
    &__tabs__content__col
      width: 100%
      
  +below(350px)
  
    &__tabs__content__col 
      
      h2
        font-size: 20px

      table
        font-size: 14px  
