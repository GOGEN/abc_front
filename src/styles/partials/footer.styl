
.footer
  position: relative
  padding-bottom: 50px
  border-top: 5px $green solid

  +below(1260px)
    padding-bottom: 0

  &__logo
    position: absolute
    top: 50px
    left: 70px

    +below(1260px)
      display: none

  &__content
    width: 730px
    margin-left: 290px
    padding-top: 80px
    clearfix()

    +below(1260px)
      width: auto
      margin: 0 -30px
      padding: 0
      text-align: center
      display: flex
      flex-direction: column-reverse

    +below(400px)
      margin: 0 -15px

  &__column
    float: left

    +below(1260px)
      float: none
      width: 100%

    &--producers
      +below(1260px)
        display: none

    &--sections &__list
      padding-right: 50px

      +below(1260px)
        padding-right: 0

    &--producers &__list
      padding-right: 85px

    &--social &__list
      clearfix()

      +below(1260px)
        display: inline-block

    &__title
      +below(1260px)
        display: none

    &__title
    &__text-item
      line-height: 30px

    &__icon-item
      float: left

      & + &
        margin-left: 5px

  &__requisites
    float: right
    padding: 10px 0
    padding-right: 25px
    background: img-url("icons/link.svg") no-repeat right center

    +below(1260px)
      float: none
      display: inline-block
      order: -1
      padding: 0
      height: 70px
      line-height: @height
      border-top: $gray-two 1px solid
      background-position: right 20px center

  &__call
    float: left
    width: 405px
    color: $green

    +below(1260px)
      float: none
      width: 100%
      font-size: 34px

    &__phone
      padding-left: 25px

      +below(1260px)
        position: relative
        bottom: 40px
        padding-left: 0

    &__action
      +below(1260px)
        position: relative
        top: 40px

  &__made-in
    float: right
    padding-top: 15px
    padding-right: 40px
    height: 35px
    background: img-url("icons/logo_its.svg") no-repeat right center

    +below(1260px)
      display: none
