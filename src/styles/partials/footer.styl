
.footer
  position: relative
  padding-bottom: 50px
  border-top: 5px $green solid
  
  &__logo
    position: absolute
    top: 50px
    left: 70px
    
  &__content
    width: 730px
    margin-left: 290px
    padding-top: 80px
    clearfix()
    
  &__column
    float: left
    
    &--sections &__list
      padding-right: 50px
      
    &--producers &__list
      padding-right: 85px
      
    &--social &__list
      clearfix()
    
    &__title
    &__text-item
      line-height: 30px
      
    &__icon-item
      float: left
      
      & + &
        margin-left: 5px
        
  &__requisites
    float: right
    padding: 10px 0
    padding-right: 25px
    background: img-url("icons/link.svg") no-repeat right center
  
  &__call
    float: left
    width: 405px
    color: $green

    & span
      padding-left: 25px
      
  &__made-in
    float: right
    padding-top: 15px
    padding-right: 40px
    height: 35px
    background: img-url("icons/logo_its.svg") no-repeat right center

