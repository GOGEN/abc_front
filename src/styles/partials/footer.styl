
.footer
  position: relative
  padding-bottom: 50px
  border-top: 5px $green solid

  &__logo
    float: left
    margin-top: 50px
    margin-left: 7%

  &__content
    float: left
    width: 740px
    margin-left: 7%
    margin-top: 70px
    clearfix()

  &__column
    float: left

    &--sections &__list
      padding-right: 50px

    &--producers &__list
      padding-right: 85px

    &--social &__list
      clearfix()

    &__title
    &__text-item
      line-height: 30px

    &__icon-item
      float: left

      & + &
        margin-left: 5px

  &__requisites
    float: right
    padding: 10px 0
    padding-right: 25px
    background: img-url("icons/link.svg") no-repeat right center

  &__call
    float: left
    width: 405px
    color: $green
      
    &__phone,
    &__action
      display: inline-block

    &__phone
      padding-left: 25px

  &__made-in
    float: right
    padding-top: 15px
    padding-right: 40px
    height: 35px
    background: img-url("icons/logo_its.svg") no-repeat right center
    
  +below(1260px)
    
    &__logo,
    &__content
      margin-left: 0
      
    &__logo
      float: none
      width: 100%
      text-align: center
      
    &__content
      center(740px)
          
  +below(980px)
    padding-bottom: 0

    &__logo
      display: none
      
    &__content
      margin: 0 -10px
      padding: 0
      max-width: none
      text-align: center
      display: flex
      flex-direction: column-reverse
      
    &__column
      float: none
      width: 100%
      
      &--producers
        display: none
        
      &--sections &__list
        padding-right: 0
        
      &--social &__list
        display: inline-block
        
      &__title
        display: none
        
    &__requisites
      float: none
      display: inline-block
      order: -1
      padding: 0
      height: 70px
      line-height: @height
      border-top: $gray-two 1px solid
      background-position: right 20px center
      
    &__call
      float: none
      padding: 35px 0
      width: 100%
      height: 140px
      font-size: 34px
      
      &__phone,
      &__action
        display: block
        
      &__phone
        position: relative
        bottom: 40px
        padding-left: 0

      &__action
        position: relative
        top: 40px
        
    &__made-in
      display: none

  +below(400px)
    
    &__content
      margin: 0 -15px

