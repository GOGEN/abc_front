
.modal

  &__dialog
    position: relative
    margin: 0 auto
    padding: 25px
    padding-top: 70px
    width: 65%
    height: 70%
    background-color: $white

    &--form
      padding: 50px 65px 65px
      max-width: 540px
      min-height: 515px

    &--dealer
      padding-top: 50px
      width: 72%
      height: auto
      max-height: initial
      background-color: $gray

  &__photo
    position: relative
    height: 100%

    img
      width: 100%
      height: 100%

  +below(980px)

    &__close
      top: 10px
      right: 10px

    &__dialog
      padding: 40px 15px 15px
      width: 95%
      height: 50%
      max-height: 310px

      &--form
        min-height: 475px
        max-height: initial
        height: auto

      &--dealer
        padding-right: 5px
        padding-left: 5px
        height: auto
        max-height: initial


.mfp-wrap
  -webkit-overflow-scrolling: touch
  -webkit-transform: translateZ(0)

html.mfp-helper
  height: 100%

  body
    overflow: hidden
    height: 100%
    -webkit-transform: translateZ(0)

.mfp-bg.popup-call-override
  background: $dark-70

.mfp-bg.popup-photo-override
  background: $white-70
  
.mfp-bg.popup-dealer-override
  background: $gray-70

button.mfp-close
  display: block
  position: absolute
  top: 25px
  right: 25px
  width: 21px
  height: @width
  border-radius: @width
  border: 0
  outline: 0
  background: $gray-two img-url("icons/close.svg") no-repeat center center
  font-size: 0

  &:active
    top: 25px

  +below(980px)
    top: 10px
    right: 10px

    &:active
      top: 10px
