
.modal
  
  &__dialog
    align()
    position: fixed
    display: none
    padding: 25px
    padding-top: 70px
    width: 65%
    height: 70%
    background-color: $white
    
    &--form
      padding: 50px 65px 65px
      max-width: 540px
      min-height: 515px
    
  &__close
    position: absolute
    top: 25px
    right: 25px    
    
    a
      display: block
      width: 21px
      height: @width
      border-radius: @width
      background: $gray-two img-url("icons/close.svg") no-repeat center center
    
  &__photo
    position: relative
    height: 100%
    
    img
      align()
      max-width: 100%
      max-height: 100%
   
  &::before
    content: ""
    display: none
    background: $white-70
    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: 0
    z-index: 10
    
  &--dark 
    &::before
      background: $dark-70
  
  &:target 
    
    &:before
      display: block
      
  &:target &__dialog
    display: block
    z-index: 11
    
  +below(680px)
  
    &__close
      top: 10px
      right: 10px
    
    &__dialog
      padding: 40px 15px 15px
    
    