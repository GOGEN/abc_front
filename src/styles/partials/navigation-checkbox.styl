
.navigation-checkbox-label

  +below(980px)
    display: block
    position: absolute
    top: 30px
    left: 15px
    width: 25px
    height: 25px
    z-index: 10
    cursor: pointer
    background: img-url("icons/burger.png") no-repeat center center
                
.navigation-checkbox-input
  position: absolute
  opacity: 0

  +below(980px)
        
    &:checked ~ .slide-wrapper
      position: absolute
      left: 100%
      height: 100vh
      overflow-y: hidden
      
.navigation-checkbox-input:checked ~ .navigation-checkbox-label
  background: img-url("icons/rectangle-1.svg") no-repeat center center,
              img-url("icons/rectangle-2.svg") no-repeat center center

