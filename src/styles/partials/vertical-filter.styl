
.vertical-filter
  padding-right: 20px

  &__item
    position: relative
    height: 50px
    line-height: @height
    border-bottom: $gray-two 1px solid

    &:first-child
      border-top: $gray-two 1px solid

    label
      display: block
      padding: 0 10px
      width: 100%
      height: 100%
      cursor: pointer

    input[type="checkbox"]
      position: absolute
      opacity: 0
      
      &:disabled + label
        color: $gray-two

      &:disabled + label:hover
        background: none
        
      &:not(checked) + label:hover
        background: $white

      &:checked + label
        background: $white

      &:checked + label::after
        display: block
        content: ""
        position: absolute
        right: 10px
        top: 50%
        width: 21px
        height: @width
        border-radius(@width)
        background: $gray-two img-url("icons/close.svg") no-repeat center center
        transform: translateY(-50%)

  +below(980px)
    padding: 0
    background: $white
    box-shadow: 0 4px 6px 0 $dark-gray
    
    &__item
      height: 40px
      line-height: @height
      border: 0
      
      &:first-child
        border: 0
      
      label
        padding-right: 10px
        padding-left: 40px

        &::after
          display: none
        
        &::before
          display: block
          content: ""
          position: absolute
          left: 15px
          top: 50%
          width: 20px
          height: @width
          border-radius(3px)
          border: $gray-two
          transform: translateY(-50%)
        
      input[type="checkbox"]
        position: absolute
        opacity: 0
        
        &:disabled + label
          color: $gray-two
          
        &:checked + label::after
          display: none

        &:checked + label::before
          background: img-url("icons/check-icon.svg") no-repeat center center