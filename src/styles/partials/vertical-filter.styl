
.vertical-filter
  padding-right: 20px

  &__item
    position: relative
    height: 50px
    line-height: @height
    border-bottom: $gray-two 1px solid

    &:first-child
      border-top: $gray-two 1px solid

    label
      display: block
      padding: 0 10px
      width: 100%
      height: 100%
      cursor: pointer

    input[type="checkbox"]
      position: absolute
      opacity: 0

      &:not(checked) + label:hover
        background: $white

      &:checked + label
        background: $white

      &:checked + label:after
        display: block
        content: ""
        position: absolute
        right: 10px
        top: 50%
        width: 21px
        height: @width
        border-radius(@width)
        background: $gray-two img-url("icons/close.svg") no-repeat center center
        transform: translateY(-50%)
