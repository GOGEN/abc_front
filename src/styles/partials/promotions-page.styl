
.promotions-page
  padding-top: 25px
  padding-bottom: 100px
  
  &__item
    position: relative
    background-color: $yellow-two
    background-repeat: no-repeat
    background-size: cover
    background-position: right bottom
    cursor: pointer
    
    h1
      font-size: 34px
      font-weight: 700
      color: $white
      
    &__goto
      position: absolute
      top: 50%
      transform: translateY(-50%)
      right: 20px
            
    &__description
      margin-top: 20px
      font-size: 20px
      line-height: 1.5rem
      color: $white
    
    &__gradient
      padding: 40px 450px 50px 40px
      min-height: 190px
      background: linear-gradient(bottom, $yellow, $yellow-0)
    
    & + &
      margin-top: 20px
      
  +below(880px)
    
    &__item
      
      &__gradient
        padding: 15px
        padding-right: 100px
                
  +below(450px)
    
    &__item
      background-position: right bottom -30px
      background-size: 250%
      
      h1
        font-size: 26px
        
      &__gradient
        padding-right: 15px
        min-height: 280px
        
      &__goto
        display: none
        
      &__description
        font-size: 16px
        line-height: 1.2rem
        
  +below(400px)
    
    &__item 
      
      h1
        font-size: 20px

      &__description
        font-size: 14px
        
      &__gradient
        min-height: 240px