
.promotions-page
  padding-top: 25px
  padding-bottom: 100px
  
  &__item
    position: relative
    background-size: cover
    background-position: right bottom
    
    h1
      font-size: 34px
      font-weight: 700
      color: $white
      
    &__goto
      position: absolute
      top: 50%
      transform: translateY(-50%)
      right: 20px
            
    &__description
      margin-top: 20px
      font-size: 20px
      line-height: 1.5rem
      color: $white
    
    &__gradient
      padding: 40px 450px 50px 40px
      min-height: 190px
      background: linear-gradient(bottom, $yellow, $yellow-0)
    
    & + &
      margin-top: 20px
      
  +below(880px)
    
    &__item
      
      &__gradient
        padding: 10px
        padding-right: 100px
