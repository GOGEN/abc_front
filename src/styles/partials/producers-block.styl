
.producers-block
  background: $green

  &__item
    span(1/5)
    display: block
    height: 125px
    color: $white
    text-align: center

    &--title h2
      font-size: 24px
      line-height: 125px

    &--factory,
    &--kdsk
      padding-top: 80px
      font-size: 16px

    &--factory
      background: img-url("icons/cube.svg") no-repeat center 20px

    &--kdsk
      background: img-url("icons/factory-2.svg") no-repeat center 25px
      background-size: 65px auto

  +below(980px)
    
    &__item
      
      &--title
        span(1/1)
        text-align: center
        
      &--factory,
      &--kdsk
        span(1/2)
        text-align: center