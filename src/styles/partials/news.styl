

.news
  margin-bottom: 90px
  
  &__gallery
    
    &__view
      margin: 0 -70px
      background: $gray-three
      text-align: center
      
      img
        height: 100%
        
    &__list
      margin-left: -20px
      padding: 15px 0
      text-align: center
      font-size: 0
      
    &__item
      display: inline-block
      position: relative
      margin-left: 20px
      margin-bottom: 20px
      width: 90px
      height: 57px
      overflow: hidden
      
      &--active
        border: 3px solid $green
      
      img
        align()
        width: 100%
  
  &__publish-date
    margin-top: 80px
    margin-bottom: 35px
    font-size: 16px
    
  +below(980px)
    
    &__gallery__item
      margin-left: 10px
      margin-bottom: 10px
