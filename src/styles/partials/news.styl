

.news
  margin-bottom: 90px
  
  &__wrapper
    center(700px)
  
  &__gallery
    
    &__view
      margin: 0 -70px
      background: $gray-three
      text-align: center
      
      &__item
        position: relative
        height: 300px
        text-align: center
        
        img
          align()
          height: 100%
        
    &__list
      margin: 0 auto
      padding: 15px 0
      text-align: center
      font-size: 0
      width: 422px
      
    &__item
      display: inline-block
      position: relative
      margin-left: 20px
      margin-bottom: 20px
      width: 90px
      height: 57px
      overflow: hidden
      
      &.slick-current
        border: 3px solid $green
      
      img
        align()
        width: 100%
  
  &__publish-date
    margin-top: 80px
    margin-bottom: 35px
    font-size: 16px
    
  +below(980px)
  
    &__gallery__view
      margin: 0 -15px
    
    &__gallery__item
      margin-left: 10px
      margin-bottom: 10px

  +below(480px)
    
    &__gallery__view__item
      height: 200px
      
    &__gallery__list
      width: 100%
      
    &__publish-date
      margin-top: 20px