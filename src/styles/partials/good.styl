
.good
  position: relative
  height: 240px
  background-repeat: no-repeat
  background-size: cover

  &__content
    padding: 80px 10px 10px 10px
    height: 100%
    background: linear-gradient(bottom, $white, $white-0)
    clearfix()

  &__img
    float: left
    position: relative
    width: 30%
    max-width: 140px
    overflow: hidden
    
    &::before
      display: block
      content: ""
      padding-top: 100%

    img
      position: absolute
      bottom: 0
      height: 100%

  &__description,
  &__header,
  &__add-cart
    float: right
    padding-left: 3%
    width: 70%

  &__header

    h3
      font-size: 20px
      font-weight: 700
      word-break: break-all

  &__description
    margin-top: 15px

    &>tbody>tr
      height: 20px

    &>tbody>tr>td
      width: 50%

    &>tbody>tr>td:first-child
      padding-right: 12px

    &>tbody>tr>td:last-child
      padding-right: 12px
      font-size: 18px
      font-weight: 700

  &__add-cart
    margin-top: 5px
      
  +below(980px)
    height: 370px
    background-position center bottom 120px
    
    &__img
      width: 50%
      
      img
        top: 0
        right: 0

    &__header
      float: none
      padding-left: 150px
      width: 100%
      
      h3
        min-height: 160px
        font-size: 18px
    
    &__description
      padding-left: 0
      width: 100%

      &>tbody>tr>td:first-child
        text-align: right
        
    &__add-cart
      clear: both
      float: none
      margin-top: 15px
      padding-left: 0
      width: 100%
      text-align: center
