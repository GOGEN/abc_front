
.good
  position: relative
  height: 240px
  background-repeat: no-repeat
  background-size: cover
  overflow: hidden

  &__content
    padding: 10px
    padding-top: 80px
    height: 100%
    background: linear-gradient(bottom, $white, $white-0)
    clearfix()

  &__img
    position: absolute
    width: 30%
    max-width: 160px
    max-height: 160px
    height: 100%
    
    &__frame
      position: absolute
      bottom: 0
      width: 100%
      background: linear-gradient(bottom, $gray, $white)
    
      &::before
        display: block
        content: ""
        padding-top: 100%

      img
        align()
        max-width: 100%
        max-height: 100%
      
  &__description,
  &__title,
  &__add-cart
    padding-left: 35%
    width: 100%

  &__title
    display: block
    display: -webkit-box
    font-size: 16px
    line-height: 18px
    font-weight: 700
    word-wrap: break-word
    height: 54px
    overflow: hidden
    text-overflow: ellipsis
    -webkit-line-clamp: 3;
    box-orient: vertical;
  
  &__description
    margin-top: 15px

    &>tbody>tr
      height: 20px

    &>tbody>tr>td
      width: 50%

    &>tbody>tr>td:first-child
      padding-right: 12px

    &>tbody>tr>td:last-child
      padding-right: 12px
      font-size: 18px
      font-weight: 700

  &__add-cart
    margin-top: 5px
      
  +below(980px)
    height: 370px
    background-position center bottom 120px
    
    &__content
      position: absolute
      height: 250px
    
    &__img
      width: 50%

    &__title
      min-height: 160px
      font-size: 18px
      padding-left: 55%
      
    &__description
      padding-left: 0
      width: 100%

      &>tbody>tr>td:first-child
        text-align: right
        
    &__add-cart
      clear: both
      float: none
      margin-top: 15px
      padding-left: 0
      width: 100%
      text-align: center
