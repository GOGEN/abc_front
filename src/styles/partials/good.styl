
.good
  position: relative
  height: 240px
  background-repeat: no-repeat
  background-size: cover

  +below(1260px)
    height: 370px
    background-position center bottom 120px


  &__content
    padding: 80px 10px 10px 10px
    height: 100%
    background: linear-gradient(bottom, $white, $white-0)
    clearfix()

    +below(1260px)
      padding: 75px 15px 40px 15px
      background-position center bottom 120px

  &__img
    float: left
    position: relative
    width: 30%
    height: 120px
    overflow: hidden

    +below(1260px)
      width: 50%
      height: 160px

    img
      position: absolute
      bottom: 0
      height: 100%

      +below(1260px)
        top: 0
        right: 0

  &__description,
  &__header,
  &__add-cart
    float: right
    padding-left: 3%
    width: 70%

  &__header
    +below(1260px)
      width: 50%

    h3
      font-size: 20px
      font-weight: 700
      word-break: break-all

      +below(1260px)
        min-height: 160px
        font-size: 18px

  &__description
    margin-top: 15px

    +below(1260px)
      padding-left: 0
      width: 100%

    &>tbody>tr
      height: 20px

    &>tbody>tr>td
      width: 50%

    &>tbody>tr>td:first-child
      padding-right: 12px

      +below(1260px)
        text-align: right

    &>tbody>tr>td:last-child
      padding-right: 12px
      font-size: 18px
      font-weight: 700

  &__add-cart
    margin-top: 5px

    +below(1260px)
      float: none
      margin-top: 15px
      padding-left: 0
      width: 100%
      text-align: center
