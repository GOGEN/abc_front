
.good
  position: relative
  background-repeat: no-repeat
  background-size: cover
  overflow: hidden

  &::before
    display: block
    content: ""
    padding-top: 55%

  &__content
    position: absolute
    bottom: 0
    display: block
    padding: 10px
    height: 55%
    min-height: 160px
    background: linear-gradient(bottom, $white, $white-0)
    clearfix()

  &__img
    position: absolute
    width: 30%
    max-width: 160px
    max-height: 160px
    height: 100%

    &__frame
      position: absolute
      bottom: 0
      width: 100%
      background: linear-gradient(bottom, $gray, $white)

      &::before
        display: block
        content: ""
        padding-top: 100%

      img
        align()
        max-width: 100%
        max-height: 100%

  &__description,
  &__title,
  &__add-cart
    padding-left: 35%
    width: 100%

  &__title
    display: block
    display: -webkit-box
    font-size: 16px
    line-height: 18px
    font-weight: 700
    word-wrap: break-word
    height: 54px
    overflow: hidden
    text-overflow: ellipsis
    -webkit-line-clamp: 3;
    box-orient: vertical;

  &__description
    margin-top: 10px

    &>tbody>tr
      height: 20px

    &>tbody>tr>td
      width: 50%

    &>tbody>tr>td:first-child
      padding-right: 12px

    &>tbody>tr>td:last-child
      padding-right: 12px
      font-size: 18px
      font-weight: 700

  &__add-cart
    position: absolute
    bottom: 10px
    margin-top: 5px

  +below(450px)
    background-position center bottom 120px
    min-height: 350px

    &::before
      padding-top: 93%

    &__content
      position: absolute
      min-height: 290px
      height: 76%

    &__img
      width: 45%
      height: auto
      bottom: 130px

    &__title
      height: 160px
      font-size: 18px
      line-height: 20px
      -webkit-line-clamp: 8;
      padding-left: 55%

    &__description
      padding-left: 0
      width: 100%

      &>tbody>tr>td:first-child
        text-align: right

    &__add-cart
      bottom: 20px
      clear: both
      float: none
      margin-top: 15px
      padding-left: 0
      width: 100%
      text-align: center

  +below(400px)

    &__title
      padding-top: 10px
      padding-bottom: 16px
      font-size: 16px
      line-height: 18px
      -webkit-line-clamp: 8
