
.job-request
  padding: 15px 0
  background: img-url("media/job_request_bg.jpg") no-repeat
  background-size: cover
  
  &__form
    margin: 0 auto
    padding: 30px 0
    max-width: 606px
    background: $white
    
    &__header
      margin: 5px auto
      margin-top: 5px
      margin-bottom: 40px
      padding-top: 12px
      padding-left: 90px
      width: 275px
      height: 60px
      background: img-url("icons/bag.svg") no-repeat left center
      font-size: 24px
      
    &__field
      margin-bottom: 20px
      text-align: center
      
    input[type="text"]
      padding: 0 10px
      width: 310px
      height: 40px
      border: 1px solid $gray-two
      
    input[type="file"]
      position: absolute
      opacity: 0
      z-index: -1
      
      & + label
        display: inline-block
        padding-left: 35px
        height: 25px
        line-height: @height
        background: img-url("icons/clip.svg") no-repeat left center
        font-size: 16px
        color: $gray-two
        cursor: pointer