
.producers
  margin-bottom: 100px
  
  &__list
    clearfix()
    margin-right: -40px
    
  &__item
    col(480/1000, 40/1000, offset: 0)
    margin-bottom: 40px
    padding: 20px
    background: $gray-two
    
    &__header
      position: relative
      padding: 10px 0
      height: 80px
      
      h2
        margin-right: 50px
        font-size: 28px
        font-weight: 700
        
      &__goto
        position: absolute
        top: 20px
        right: 0
        width: 38px
        height: 14px
        
        a
          display: block
          width: 100%
          height: 100%
          background: img-url("icons/arrow-right.svg") no-repeat center center
          
    &__cover
      position: relative
      margin-top: 10px
      height: 225px
      background: img-url("media/factory_bg.jpg") no-repeat center center
      background-size: cover
      
      &::after
        display: block
        content: ""
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%
        background-color: $green-80
      
      &--factory::after
        background-image: img-url("icons/cube.svg")
        background-repeat: no-repeat
        background-position: center center
        background-size: 90px 110px

      &--kdsk::after
        background-image: img-url("icons/kdsk.svg")
        background-repeat: no-repeat
        background-position: center center
        background-size: 90px 110px
        
  +below(1260px)
    
    &__item__header
      height: 110px
      
  +below(980px)
    
    &__item__header 
      height: 70px
      
      h2
        font-size: 20px
        
  +below(680px)
  
    &__list
      margin: 0
    
    &__item
      span(1/1)
