
.carousel
  position: relative
  
  &__item
    position: relative
    height: 420px
    overflow: hidden

    img
      align()
      min-width: 100%
      height: 100%

    &__title
      position: absolute
      bottom: 0
      padding: 25px 30px
      padding-right: 180px
      width: 100%
      height: 80px
      background-color: $white-80

      h1
        font-size: 34px
        font-weight: 500

  &__arrows
    position: absolute
    bottom: 0
    right: 0
    font-size: 0px

    &__item
      display: inline-block
      width: 80px
      height: @width
      background-color: $white
      cursor: pointer
      
      &:hover
        background-color: $gray

      & + &
        margin-left: 1px

      &--left
        background-image: img-url('icons/arrow-left.svg')
        background-repeat: no-repeat
        background-position: center center


      &--right
        background-image: img-url('icons/arrow-right.svg')
        background-repeat: no-repeat
        background-position: center center

          
  +below(980px)
    
    &__item
      
      &__title
        min-height: 100px
        padding-right: 30px
        
        h1
          text-align: center
          
    &__arrows
      bottom: 50%
      width: 100%
      
      &__item
        background-color: transparent
        
        &:hover
          background-color: transparent
        
        &--left
          float: left
          
        &--right
          float: right
