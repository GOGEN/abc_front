
.carousel
  position: relative
  height: 420px

  &__slide
    height: 100%
    overflow: hidden

    img
      width: 100%

  &__panel
    position: absolute
    bottom: 0
    width: 100%
    height: 80px
    background-color: $white-80
    clearfix()

    &__title
      float: left
      padding: 25px 30px

      h1
        font-size: 34px
        font-weight: 500

    &__arrows
      float: right
      font-size: 0px

      &__item
        display: inline-block
        width: 80px
        height: @width
        background-color: $white

        & + &
          margin-left: 1px

        &--left
          background-image: img-url('icons/arrow-left.svg')
          background-repeat: no-repeat
          background-position: center center

        &--right
          background-image: img-url('icons/arrow-right.svg')
          background-repeat: no-repeat
          background-position: center center
