
.search-form
  center(1060px, pad=30px)
  
  &__field
    clearfix()
    border-bottom: 1px solid $gray-six
    padding-top: 10px
    padding-bottom: 10px
    
    input[type="text"]
      float: left
      max-width: 900px
      width: 100%
      font-size: 28px
      border: 0
      background: transparent
      
    button[type="submit"]
      float: right
      margin: 0
      padding: 0 15px
      height: 27px
      line-height: @height
      border: 0
      outline: 0
      border-radius(2px)
      background: $white
      font-size: 18px
      cursor: pointer