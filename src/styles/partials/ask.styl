
.ask
  margin-top: 5px
  padding: 40px 55px
  background: $gray img-url("media/house_pic.jpg") no-repeat right bottom

  +below(1260px)
    padding-bottom: 160px
    margin-right: -30px
    margin-left: -30px
    padding-right: 15px
    padding-left: 15px
    background-position: right -150px bottom -320px

  +below(400px)
    margin-right: -15px
    margin-left: -15px

  &__form
    padding: 40px 60px 50px 40px
    max-width: 530px
    height: 475px
    background: $white

    +below(1260px)
      margin: 0 auto
      padding-right: 10px
      padding-left: 10px

    &__header
      padding-bottom: 40px

      h2,h3
        text-align: center

      h2
        font-size: 34px

      h3
        font-size: 16px
        color: $gray-two

      h2 + h3
        margin-top: 15px

    &__field

      input[type="text"], textarea
        width: 100%
        font-size: 20px
        padding: 0 25px
        border: $gray-two
        border-bottom: none
        outline: none

      input[type="text"]
        height: 55px

      textarea
        padding-top: 20px
        padding-bottom: 20px
        height: 100px
        margin-bottom: -3px
