
.topbar-link-catalog
  display: block
  height: 36px
  line-height: @height
  border-radius(3px)
  padding-left: 50px
  padding-right: 25px
  background: $green-four img-url("icons/catalog-white.svg") no-repeat left 25px center
  color: $white
  font-size: 18px
  background-size: 12px 12px
  
  &:hover
    background-color: $green-five


.link-catalog
  display: block
  padding: 0 85px
  height: 50px
  border-radius(3px)
  line-height: @height
  background: $green-four img-url("icons/arrow-right-white.svg") no-repeat right 15px center
  color: $white
  font-size: 20px
  font-weight: 700

  &:hover
    background-color: $green-five
    
.link-phone
  color: $green-four
  
  &:hover
    color: $green-five
    

.link-call
  display: inline-block
  height: 36px
  line-height: @height
  border-radius(3px)
  padding: 0 25px
  background: $gray-four
  font-size: 18px
  background-size: 12px 12px

  &:hover
    background-color: $gray
    
  &--green
    background-color: $green-four
    color: $white
    
    &:hover
      background-color: $green-five
    
  +below(980px)
    font-size: 14px
    padding: 0 20px
    
.link-share
  padding-right: 25px
  background: img-url("icons/link.svg") no-repeat right center
  color: $black

  &:hover
    color: $black-two
    opacity: .75
    
.link-circle-arrow
  display: block
  width: 30px
  height: @width
  border-radius(@width)
  background: $white img-url("icons/arrow-right.svg") no-repeat center center
  background-size: 20px 20px
  
  &:hover
    background-color: $gray
    
.link-rectangle-arrow
  display: block
  width: 90px
  height: 50px
  background: $white img-url("icons/arrow-right.svg") no-repeat center center
  
  &:hover
    background-color: $gray
    
  +below(980px)
    width: 60px
    height: 30px

  
.link-close-gray
  display: block
  width: 20px
  height: @width
  border-radius(@width)
  background: $gray-four img-url("icons/close.svg") no-repeat center center
  
  &:hover
    background-color: $white
    
.link-dealers
  display: inline-block
  padding: 18px 73px 18px 25px
  min-height: 50px
  border-radius(3px)
  background: $blue img-url("icons/arrow-right-white.svg") no-repeat center right 25px
  color: $white
  
  &:hover
    background-color: $blue-two
    
  +below(980px)
    padding-left: 15px
    padding-right: 63px
    background-position: center right 15px
    
.link-scheme
  display: inline-block
  padding-right: 45px
  padding-left: 10px
  height: 40px
  line-height: 40px
  background: $white img-url('icons/road.svg') no-repeat right 10px center
  font-size: 16px
  
  &:hover
    color: $black-two
    opacity: .75
    
.link-cart-mobile
  display: block
  position: relative
  width: 30px
  height: @width
  background: img-url('icons/cart-black.svg') no-repeat center center
  
  &:hover
    opacity: .5
  
  &__notify
    position: absolute
    top: -2px
    left: -3px
    width: 17px
    height: @width
    border-radius(@width)
    background-color: $green
    color: $white
    font-size: 11px
    line-height: @height
    text-align: center
    
.link-show-more
  display: inline-block
  padding: 0 15px
  height: 27px
  line-height: @height
  background-color: $gray-four
    
  &:hover
    background-color: $gray