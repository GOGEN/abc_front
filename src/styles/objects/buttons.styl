
.btn
  padding: 0 25px
  height: 36px
  line-height: @height
  border-radius(3px)
  border: none
  font-family: "Museo"
  outline: none
  cursor: pointer

  &--gray
    background-color: $gray

  &--search
    width: 36px
    background: $gray img-url("icons/search.svg") no-repeat center center

  &--catalog
    padding-left: 50px
    background: $gray img-url("icons/catalog.svg") no-repeat left center
    font-size: 18px

  &--green
    padding: 0 40px
    background: $green
    color: $white
    
  &--submit
    width: 100%
    height: 55px
    border-radius(0)
    font-size: 20px
    
  &--anketa
    background-color: $blue
    color: $white
    font-size: 16px
    font-weight: 700px
