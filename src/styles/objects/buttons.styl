
.btn
  padding: 0 25px
  height: 36px
  line-height: @height
  border-radius(3px)
  border: none
  font-family: "MuseoSans"
  outline: none
  cursor: pointer

  &--gray
    background-color: $gray-four
    
    &:hover
      background-color: $gray

  &--search
    width: 36px
    background: $gray img-url("icons/search.svg") no-repeat center center

  &--green
    padding: 0 40px
    background: $green-four
    color: $white
    
    &:hover
      background: $green-five
      
    &:disabled
      background-color: $green-three
    
  &--submit
    width: 100%
    height: 55px
    border-radius(0)
    font-size: 20px
    
  &--anketa
    background-color: $blue
    color: $white
    font-size: 16px
    font-weight: 700px
    
  &--dealers
    padding-right: 73px
    height: 50px
    line-height: @height
    background: $blue img-url("icons/arrow-right-white.svg") no-repeat center right 25px
    color: $white
    
    +below(980px)
      padding-left: 15px
      padding-right: 63px
      background-position: center right 15px
      
  &--cart,
  &--good
    padding: 0 75px
    height: 50px
    line-height: 50px
    font-size: 16px
    font-weight: 700
    background: $green
    color: $white
    
    &:disabled
      background: $green-three